#:kivy 2.2.1

<pongGame>:
    canvas:
        Rectangle:
            pos: self.center_x-5,0
            size:10, self.height

    Label:
        font_size: 50
        center_x: root.width / 4
        top: root.top - 50
        text: "0"

    Label:
        font_size: 50
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"